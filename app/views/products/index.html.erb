<h1>Listing products</h1>
<div id="page">
  <% if flash[:alert] %>
      <p class="flash-error"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:notice] %>
      <p class="flash-notice"><%= flash[:notice] %></p>
  <% end %>
  <%= yield %>
</div>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @variants.each do |variant| %>
      <tr>
        <td><%= variant.product.title %></td>
        <td><%= variant.price %></td>
        <td><%= variant.quantity %></td>
        <td><%= button_to 'Buy', product_variant_buy_path(variant.product, variant) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

