<!DOCTYPE html>
<html>
<head>
  <title>ShopCh</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<div>
  <% if signed_in? %>
  <p>
    <%= current_buyer.email %>
  </p>
  <p>
    credits: <%= current_buyer.credits %>
  </p>
  <% end %>
</div>

<%= yield %>

</body>
</html>
